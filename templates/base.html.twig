<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/style.css') }}">
        {% endblock %}
    </head>
    <body>
    
<nav><a href="{{ path('home')}}">Accueil</a> | <a href="{{ path('message')}}">Liste des messages</a> | <a href="{{ path('message_add')}}">Ajouter message</a> | 
{% if app.user %}
    <a href="{{path('app_logout')}}">Se d√©connecter</a>
{% else %}
    <a href="{{path('login')}}">Se connecter</a> | <a href="{{path('inscription')}}">S'inscrire</a>
{% endif %}
{% if app.user %}
    <form action="{{ path('recherche') }}" method="get">
                    <input  type="text" name="s">
                    <button type="submit">Rechercher</button>
                </form>
{% endif %}
</nav>


    {% for message in app.flashes('success') %}
    <div class="alert alert-success">{{ message | raw }}</div>
    {% endfor %}
    {% for message in app.flashes('errors') %}
    <div class="alert alert-danger">{{ message | raw }}</div>
    {% endfor %}
        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
