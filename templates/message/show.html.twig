{% extends 'base.html.twig' %}
{% block title %}Snippets - Message détaillé{% endblock %}



{% block body %}
<h1>Votre message : </h1>

    <table>
        <tr>
            <th>Objet du message</th>
            <th>Corps du message</th>
        </tr>
        <tr>
            <td>{{ message.objet }}</td>
            <td><textarea id="copyTarget" readonly>{{ message.corps | raw }}</textarea></td>
        </tr>
        
    </table>
<p>Vous pouvez <a href="{{ path('message') }}">cliquer ici</a> pour retourner sur la liste des messages.</p>
{% endblock %}